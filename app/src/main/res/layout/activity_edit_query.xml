<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.EditQueryActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:padding="10dp"
                    app:srcCompat="@drawable/leftrrow" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:text="Edit Query"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@color/black" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="40dp"
                    android:text="खालीलपैकी काय करायचे आहे ते ऑप्शन सिलेक्ट करा *"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp">

                    <Spinner
                        android:id="@+id/querytype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@drawable/search"
                        android:ems="10"
                        android:hint="Select Query"
                        android:padding="10dp"
                        android:textSize="20sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/typetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginBottom="10dp"
                        android:text="TextView" />
                </FrameLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/whatyouwanttext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="20dp"
                        android:text="तुम्हाला काय भाड्याने द्यायचे आहे * "
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/subtype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="20dp"
                        android:background="@drawable/search"
                        android:ems="10"
                        android:fontFamily="@font/convergence"
                        android:hint="फ्लॅट/रूम/शटर/घर/वाहन/जागा/इतर"
                        android:inputType="textMultiLine"
                        android:padding="15dp"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/moneytext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="20dp"
                        android:text="महिनेवारी भाडे किती असेल"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/moneyedittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="20dp"
                        android:background="@drawable/search"
                        android:ems="10"
                        android:fontFamily="@font/convergence"
                        android:hint="किंमत टाका"
                        android:inputType="textMultiLine"
                        android:padding="15dp"
                        android:textSize="14sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/texstcVisew7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="20dp"
                        android:text="वर्णन करा (Description)"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/disc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="20dp"
                        android:background="@drawable/search"
                        android:ems="10"
                        android:fontFamily="@font/convergence"
                        android:hint="वर्णन करा (Description)"
                        android:inputType="textMultiLine"
                        android:padding="15dp"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/addresstext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="20dp"
                        android:text="पत्ता टाका"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/addressedittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="20dp"
                        android:background="@drawable/search"
                        android:ems="10"
                        android:fontFamily="@font/convergence"
                        android:hint="पत्ता टाका"
                        android:inputType="textMultiLine"
                        android:padding="15dp"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="20dp"
                        android:text="काही नियम व अट आहे का ? (Terms and condition)"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="20dp"
                        android:background="@drawable/search"
                        android:ems="10"
                        android:fontFamily="@font/convergence"
                        android:hint="काही नियम व अट आहे का ? (Terms and condition)"
                        android:inputType="textMultiLine"
                        android:padding="15dp"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="20dp"
                        android:text="ऑपरेटरचे(तुमचे) नाव (Operator Name)"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/uname"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="left"
                        android:layout_margin="20dp"
                        android:background="@drawable/search"
                        android:ems="10"
                        android:fontFamily="@font/convergence"
                        android:hint="ऑपरेटरचे(तुमचे) नाव (Operator Name) टाका "
                        android:inputType="text"
                        android:padding="10dp"
                        android:textSize="14sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tecxstVisew7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="20dp"
                        android:text="संपर्क टाका (Contact Number) *"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/querycontact"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="left"
                        android:layout_margin="20dp"
                        android:background="@drawable/search"
                        android:ems="10"
                        android:fontFamily="@font/convergence"
                        android:hint="संपर्क टाका (Contact Number) टाका"
                        android:inputType="number"
                        android:padding="10dp"
                        android:textSize="14sp" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="20dp"
                        android:text="व्हॉट्सअँप संपर्क (WhatsApp Number)"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/querywhatapp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="left"
                        android:layout_margin="20dp"
                        android:background="@drawable/search"
                        android:ems="10"
                        android:fontFamily="@font/convergence"
                        android:hint="हॉट्सअँप संपर्क (WhatsApp Number) टाका"
                        android:inputType="number"
                        android:padding="10dp"
                        android:textSize="14sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="20dp"
                        android:text="तुमच्याशी संपर्क करण्याची वेळ (Contact Time)"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/contactime"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="left"
                        android:layout_margin="20dp"
                        android:background="@drawable/search"
                        android:ems="10"
                        android:fontFamily="@font/convergence"
                        android:hint="10am to 5pm"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textSize="14sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="12"
                            android:text="एखादी इमेज टाकायची आहे का ? (Is you want to upload any image) ? (optional)"
                            android:textColor="@color/black" />

                        <Button
                            android:id="@+id/uploadimage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="12"
                            android:backgroundTint="#21488C"
                            android:padding="10dp"
                            android:text="Upload Image"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            app:cornerRadius="15dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/queryimage"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_margin="10dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/images" />
                </LinearLayout>


                <Button
                    android:id="@+id/submitqerybtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Submit Query" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>